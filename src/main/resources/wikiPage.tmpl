<% var converter = new Showdown.converter(); %>

<html>

<title><%=obj.name%></title>

<body>

<h1><%=obj.name%></h1>

<hr>

<% if (postData.edit) { %>

   <form action="./<%=obj.name%>" method="post">
     <textarea name="markdown" cols="60" rows="40"><%=obj.markdown%></textarea>
     <br>
     <input type="submit" name="submit"/>
   </form>

<% } else { %>

    <%=converter.makeHtml(obj.markdown)%> 

<% } %>

<hr>

<a href=".">[Wiki Home]</a>

<% if (!postData.edit) { %>
  <a href="./<%=obj.name%>?edit=true">[Edit This Page]</a>
<% } %>

</html>
